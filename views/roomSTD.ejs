<!DOCTYPE html>
<html>
  <head>
    <title>Student</title>
    <meta charset="UTF-8">
  </head>
    <body>
      <%- include navbarSTD %>
      <main class="container" style="margin-top:50px">
        <div class="card">
          <div class="card-header">
            <ul class="nav nav-pills w-100">
              <li class="nav-link">ข่าวสาร</li>
               <li class="nav nav-pills w-100">
            </ul>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ชื่อเรื่อง</th>
                <th scope="col">ผู้เขียน</th>
                <th scope="col">รายละเอียด</th>
              </tr>
            </thead>
              <div class="card-body">
                <% if(data.length == 0){ %>
                  <td>ไม่พบข้อมูลข่าวสาร</td>
                <% } %>
                <% for(var i=0; i<data.length; i++){ %>
                  <tr>
                    <td><%= data[i].title %></td>
                    <td><%= data[i].author %></td>
                    <td><%= data[i].content %></td>
                  </tr>
                  <% } %>
            </div>
          </table>
          </div>
        </main>
    </body>
</html>