<!DOCTYPE html>
<html>
  <head>
    <title>Manage</title>
    <meta charset="UTF-8">
  </head>
    <body>
      <%- include navbarAdmin %>
      <main class="container" style="margin-top:50px">
        <div class="card">
          <div class="card-header">
            <ul class="nav nav-pills w-100">
              <li class="nav-link">ข่าวสาร</li>
               <li class="nav nav-pills w-100">
            </ul>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ชื่อเรื่อง</th>
                <th scope="col">ผู้เขียน</th>
                <th scope="col">รายละเอียด</th>
                <th scope="col">การกระทำ</th>
              </tr>
            </thead>
              <div class="card-body">
                <% if(data.length == 0){ %>
                  <td>ไม่พบข้อมูลให้จัดการ</td>
                <% } %>
                <% for(var i=0; i<data.length; i++){ %>
                  <tr>
                    <td><%= data[i].title %></td>
                    <td><%= data[i].author %></td>
                    <td><%= data[i].content %></td>
                    <td>
                      <form method="post" action="/roomAdmin/manage<%= data[i].title %>">
                        <button class="btn btn-danger delete" onclick="alert('Are you sure?')">ลบ</button>
                      </form>
                    </td>
                </tr>
                <% } %>
          </div>
        </table>
        </div>
      </main>
      </main>
    </body>
</html>